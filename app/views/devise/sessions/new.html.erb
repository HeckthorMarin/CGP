<div class="container mt-4">
  <div class="row">
    <div class="col pb-3 align-self-center">
      <br>
      <h1 class="titulo pt-lg-3 text-center"><strong>CGP</strong></h1>
      <h5 class="subtitulo mb-lg-4 text-center"><strong>CONTROL DE GASTOS PERSONALES</strong></h5>
      <div class="row justify-content-center">
        <div class="col-auto">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <div class="form-group">
                <%= f.email_field :email, autofocus: true, autocomplete: false, class:"form-control", type:"email", placeholder:"Correo Electrónico" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, autocomplete: false, class:"form-control", type:"password", placeholder:"Contraseña" %>
              </div>

               <% if devise_mapping.rememberable? -%>
                <div class="form-group">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>

              <%= f.submit "Iniciar Sesión", class:"btn btn-primary btn-inicio" %>
            
            <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
    <%= render "forms/piepag" %>
  </div>
</div>


