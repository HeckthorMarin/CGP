<div class="container">
	<div class="row justify-content-between">
		<div class="col pb-3">
			<h1 class="titulo-sm"><strong>CGP</strong></h1>

		</div>
		
		<!--Solo aparece en un tamaño mayor a 748px, de resto aparece al final de la pagina-->
		<div class="col-auto d-none d-md-block links_inicio_inv">
			<button onclick="location.href='iniciar-sesion.html'" type="button" class="btn btn-link text-left"><strong><- Volver a inicio de sesión</strong></button>
		</div>
		

	</div>	
	<hr>
	<div class="row justify-content-center justify-content-md-between">
		<!--Imagen hombre pensando, solo aparece con un tamaño mayor a 768px-->
		<div class="col d-none d-md-block align-self-center">
			<%= image_tag 'think.png', class:'img-fluid', alt:"cargando.." %>
		</div>	

		<!--Cuadro recuperar contraseña-->
		<div class="col-12 col-sm-10 col-md-8 col-lg">
			<div class="card mb-3" style="background: transparent; color: #004644;">
				<div class="card-block p-3">
					<h3 class="card-title text-center">Recuperar contraseña</h3>
					<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  						<%= devise_error_messages! %>

						<div class="form-group row">
							<div class="col-12">
								<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", type: "email", placeholder: "Correo Electrónico *"%>
							</div>
						</div>
					
						<div class="form-group row">

							<div class="col">
								<input class="form-control" type="text" name="" placeholder="Pregunta de seguridad #1" readonly>
							</div>

							<div class="col-12">
								<%= f.text_field :sa1, autocomplete: "off", class: "form-control mt-3", type: "text", placeholder: "Respuesta #1 *"%>
							</div>

						</div>

						<div class="form-group row">
							<div class="col-12">
								<input class="form-control" type="text" name="" placeholder="Pregunta de seguridad #2" readonly>
							</div>

							<div class="col-12">
								<%= f.text_field :sa1, autocomplete: "off", class: "form-control mt-3", type: "text", placeholder: "Respuesta #2 *"%>
							</div>

						</div>
						
						<div class="row justify-content-between">
							<div class="col-12 col-sm-4 col-md text-left">
    							<%= f.submit "Confirmar", type: "submit", class: "btn btn-primary" %>
							</div>
							
							
						</div>
						
					<% end %>



				</div>
			</div>
		</div>

	</div>
	
	<!--Solo aparece cuando mide menos de 768px-->
	<div class="row">
		<div class="col-auto d-md-none links_inicio">
			<button type="button" class="btn btn-link text-left"><- Volver a inicio de sesión</button>
		</div>
	</div>
</div>